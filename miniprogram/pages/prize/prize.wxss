.container {
  background-color: #f0f0f0;
  width: 100%;
  height: 100%;
  font-family: "PingFangSC-Regular";
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 80%;
  margin-top: 70%;
}

.loading image {
  width: 28px;
  height: 28px;
}

.lottery-info {
  margin-bottom: 15px;
  border-radius: 4px;
  overflow: hidden;
  background-color: #fff;
}

.prizes {
  font-size: 15px;
  color: rgba(0, 0, 0, 0.9);
  line-height: 1.59;
  margin-top: 10px;
  margin-left: 20rpx;
  margin-bottom: 10px;
}

.lottery-date {
  margin-left: 20rpx;
  margin-bottom: 10px;
  font-size: 11px;
  color: #808080;
}

.sponsor {
  font-size: 14px;
  color: #000;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 20rpx;
}

.join-normal-lottery button {
  border-radius: 50%;
  background: linear-gradient(to bottom, #d35648, #ce4d3f);
  font-size: 16px;
  font-weight: bolder;
  color: #fff;
  text-align: center;
  width: 110px;
  height: 110px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2.5px 6px 0 rgba(0, 0, 0, 0.08);
  position: relative;
}

.join-normal-lottery button .animate-bg {
  position: absolute;
  opacity: 1;
  transform: scale(0);
  border: 3px solid rgba(255, 255, 255, 0.8);
  width: 104px;
  height: 104px;
  border-radius: 50%;
  z-index: 500;
  left: 0px;
  top: 0px;
}

.join-normal-lottery button.hover {
  background: #b24539;
}

.join-normal-lottery button:after {
  border-radius: 50%;
  content: "";
  position: absolute;
  box-shadow: 0 3px 8px -2px rgba(0, 0, 0, 0.25);
  top: 0;
  left: 0;
  border: solid 4px rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: left top;
}

.join-normal-lottery button.joined .animate-bg {
  opacity: 1;
  transform: scale(0.9);
  transform-origin: 50% 50% 0px;
  border: 3px solid rgba(255, 255, 255, 0.15);
}

.join-normal-lottery button.joined text {
  color: rgba(255, 255, 255, 0.4);
}

.join-normal-lottery button.joined.funny text {
  color: rgba(0, 0, 0, 0.25);
}

.join-normal-lottery button.joined.hover {
  background: linear-gradient(to bottom, #d35648, #ce4d3f);
}

.join-normal-lottery button.disable {
  opacity: 0.3;
}

.join-normal-lottery button.disable text {
  opacity: 0.5;
}

.join-normal-lottery button.disable.hover {
  background: linear-gradient(to bottom, #d35648, #ce4d3f);
}

.join-normal-lottery button .content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.join-normal-lottery button.funny {
  background: #e5c527;
  color: rgba(0, 0, 0, 0.7);
}

.join-normal-lottery button.funny.hover {
  background: #ceaf16;
}

.join-normal-lottery button .icon {
  width: 33px;
  height: 33px;
}

.game-detail-users {
  padding-top: 22px;
  padding-bottom: 25px;
  display: block;
  /* background: #fff; */
}

.game-detail-users .game-detail-users-banner {
  text-align: center;
}

.game-detail-users .game-detail-users-banner .game-detail-users-banner-value {
  font-size: 14px;
  letter-spacing: 0.3px;
  text-align: center;
  color: #808080;
  flex: 0 0 auto;
}

.game-detail-users .game-detail-users-banner .game-detail-users-banner-value .arrow-right {
  border: solid #246ab0;
  border-width: 0 2px 2px 0;
  display: inline-block;
  padding: 3px;
  transform: rotate(-45deg);
  position: relative;
  flex: 0 0 auto;
  align-self: center;
  top: -1px;
  left: -3px;
}

.game-detail-users .game-detail-users-banner .game-detail-users-banner-value view {
  display: inline-block;
  color: #2573b8;
}

.game-detail-users .game-detail-users-banner .game-detail-users-banner-value view.highlight {
  opacity: 0.5;
}

.game-detail-users .game-detail-users-banner .game-detail-users-banner-value button {
  display: inline;
  background: transparent;
  color: #45749f;
  font-weight: bolder;
  border: none;
  padding: 0px;
}

.game-detail-users .game-detail-users-banner .game-detail-users-banner-value button.button-hover {
  color: #45648f;
  background: #ddd;
}

.game-detail-users .game-detail-users-banner .game-detail-users-banner-value button:after {
  display: none;
}

.game-detail-users .game-detail-users-banner .game-detail-users-banner-line {
  flex: 1 1 auto;
  height: 1px;
  opacity: 0.06;
  background-color: #000;
  margin: 0px 14px;
  align-self: center;
}

.game-detail-users .game-detail-users-list {
  margin-top: 20px;
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  align-items: center;
  justify-content: center;
}

.game-detail-users .game-detail-users-list .game-detail-users-user {
  width: 33px;
  height: 33px;
  flex: 0 0 auto;
  display: flex;
  flex-direction: column;
  margin: 0px 2px 4px;
}

.game-detail-users .game-detail-users-list .game-detail-users-user image {
  width: 33px;
  height: 33px;
}

.winner {
  margin-bottom: 15px;
  background-color: #fff;
  padding-bottom: 20rpx;
}

.winner-list {
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  align-items: center;
  justify-content: center;
}

.winner-user {
  width: 220rpx;
  /* height: 250rpx; *//* flex: 0 0 auto; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.winner-user image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-top: 12px;
}

.nike-name {
  font-size: 11px;
  color: #000;
  margin: 12px 0 15px;
}

.winner-userlist {
  font-size: 14px;
  color: #000;
  margin-left: 20rpx;
  padding-top: 20rpx;
}

.result {
  font-size: 18px;
  font-weight: bold;
  color: #ce4d3f;
  margin-left: 20rpx;
  padding-top: 20rpx;
}

.winner-item {
  margin: 10px 20rpx 0 20rpx;
  /* padding-top: 12px; */
  border: 1rpx solid #dbd3d3;
}

.winner-header {
  color: #000;
  font-size: 14px;
  width: 100%;
