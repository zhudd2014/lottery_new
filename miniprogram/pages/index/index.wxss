page {
  background-color: #f0f0f0;
  width: 100%;
  height: 100%;
  font-family: "PingFangSC-Regular";
}

page::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.indexPage .scrollview {
  padding-bottom: 120px;
  width: 100%;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 80%;
  margin-top: 70%;
}

.loading image {
  width: 28px;
  height: 28px;
}

.empty {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0px;
  left: 0px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.empty image {
  margin: -77px 32px 0;
  align-self: center;
  width: 120px;
  height: 136px;
}

.official-banner {
  flex: 0 0 auto;
  align-self: center;
  width: 195px;
  margin-left: 14px;
  position: relative;
  height: 53px;
}

.group-list {
  margin: 0px 10px;
}

.item {
  margin-bottom: 15px;
  border: solid 1rpx rgba(0, 0, 0, 0.1);
  border-radius: 4px;
  overflow: hidden;
  background-color: #fff;
}

.sponsor {
  font-size: 14px;
  padding: 20px 20px 0;
  color: #d22220;
  font-weight: bold;
}

.prizes {
  font-size: 16px;
  color: rgba(0, 0, 0, 0.9);
  line-height: 1.59;
  margin-top: 10px;
  margin-left: 20px;
  margin-bottom: 10px;
}

.lottery-date {
  margin-left: 20px;
  margin-bottom: 10px;
  font-size: 11px;
  color: #808080;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: transparent;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
